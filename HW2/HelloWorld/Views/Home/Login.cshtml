@model HelloWorld.Models.LoginModel

@{    Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div> 
        @using (Html.BeginForm())
        {
            <p>
                <label>User Name:</label> @Html.TextBoxFor(t => t.UserName,
                             new { @class = "form-control", maxlength = 30, style = "width:200px;" })
            </p>

            <input class="btn btn-success" type="submit" value="Login" />
        }
    </div>
</body>
</html>
